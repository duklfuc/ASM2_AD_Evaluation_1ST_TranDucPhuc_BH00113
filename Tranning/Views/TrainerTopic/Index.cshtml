@{
    ViewData["Title"] = "Assigned Trainer Topic page";
    Layout = "~/Views/Shared/_TrainingStaffLayout.cshtml";
    bool statusAdd = Convert.ToBoolean(TempData["SaveStatus"]);
    bool statusUpdate = Convert.ToBoolean(TempData["UpdateStatus"]);
}

<div class="row">
    <div class="col-sm-12 col-md-12">
        <h3 class="display-6">
            List assigned Trainer to Topic
        </h3>
        <a class="btn btn-primary btn-sm" href="@Url.Action("Add", "TrainerTopic")"> Assign New Trainee To Course </a>
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p class="mb-0">
                    <input style="padding:0 4px 3px 16px; height:35px; border-radius:40px 0 0 40px; border: solid 1px black; width:500px" type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <button type="submit" class="btn btn-primary btn-sm mb-0" style="border-radius:0 40px 40px 0; border: 1px solid black; height:35px">Search</button>
                    <a asp-action="Index">Back to full list</a>
                </p>
            </div>
        </form>

        @if (TempData["UpdateStatus"] != null)
        {
            if (statusUpdate)
            {
                <div class="text-success my-2">Update successfully</div>
            }
            else
            {
                <div class="text-danger my-2">Update Failure</div>
            }
        }

        @if (TempData["saveStatus"] != null)
        {
            if ((bool)TempData["saveStatus"])
            {
                <div class="text-success my-2">Add successfully</div>
            }
            else
            {
                <div class="text-danger my-2">Add Failure</div>
            }
        }

        <table class="table">
            <thead class="text-center">
                <tr>
                    <th>TOPIC NAME</th>
                    <th>TRAINER NAME</th>
                    <th>CREATED AT</th>
                    <th colspan="2" width="5%">ACTION</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model.TrainerTopicDetailLists)
                {
                    <tr>
                        <td>@item.topicName</td>
                        <td>@item.trainerName</td>
                        <td>@item.created_at</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="@Url.Action("Update", "TrainerTopic", new { topicId = @item.topic_id })">Update</a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" asp-controller="TrainerTopic" asp-action="Delete" asp-route-trainerId="@item.trainer_id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
